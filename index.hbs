{{!< default}}
<div class="gh-page">
  <div class="gh-container">
    <div class="gh-hero">
      <img
        src="assets/images/logo.svg"
        class="gh-hero__img"
        alt="Logo of Succubus"
        width="180px"
        height="180px"
      />
      <h1 class="gh-hero__header">
        <span> Suc </span>
        <span class="gh-hero__header-intermediary-header"> c </span>
        <span> ubus </span>
      </h1>
    </div>

    <div class="gh-postfeed">
      {{#foreach posts}}

      {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}

      {{/foreach}}
    </div>

    {{!-- If JS isn't enabled, fallback to standard pagination --}}
    <noscript>
      <div class="gh-pagination">
        {{ pagination }}
      </div>
    </noscript>
  </div>
</div>
